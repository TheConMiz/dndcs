{
  "name": "dndcs",
  "productName": "DnDCS",
  "version": "0.1.0",
  "description": "A Character sheet solution for Dungeons & Dragons, built using Electron, React and SQLite3",
  "main": "./public/electron-main.js",
  "scripts": {
    "start": "(@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./devToolsClear.ps1) & (electron .)",
    "postinstall": "electron-builder install-app-deps",
    "dev": "webpack && webpack serve",
    "test-build": "webpack && electron-builder --dir",
    "dist": "webpack && electron-builder",
    "release": "webpack && electron-builder build --win --publish always"
  },
  "build": {
    "appId": "com.electron.dndcs",
    "productName": "DnDCS",
    "asar": "true",
    "asarUnpack": [
      "public/data"
    ],
    "directories": {
      "app": "./",
      "buildResources": "./src"
    },
    "files": [
      "./public/electron-main.js",
      "./public/data/**/*",
      "!dist/win-unpacked/**/*",
      {
        "from": "dist/",
        "to": "public/",
        "filter": [
          "!dist/*.yaml"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/icon.ico",
      "publisherName": "Vishal Venkatraman",
      "publish": [
        {
          "provider": "github",
          "owner": "conmiz",
          "repo": "dndcs",
          "token": "9bea4e603df918281da6ce80caf484fe00e7f297"
        }
      ]
    }
  },
  "nsis": {
    "oneClick": "false",
    "allowToChangeInstallationDirectory": "true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheConMiz/dndcs.git"
  },
  "keywords": [
    "DnD"
  ],
  "author": "Vishal Venkatraman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TheConMiz/dndcs/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@reduxjs/toolkit": "^1.6.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-import": "^1.13.3",
    "css-loader": "^6.3.0",
    "electron": "^15.0.0",
    "electron-builder": "^22.11.7",
    "electron-devtools-installer": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.26.0",
    "html-webpack-plugin": "^5.3.2",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "redux-devtools": "^3.7.0",
    "redux-devtools-extension": "^2.13.9",
    "style-loader": "^3.3.0",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1"
  },
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "antd": "^4.16.13",
    "clsx": "^1.1.1",
    "draft-js": "^0.11.7",
    "knex": "^0.95.11",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.5",
    "react-table": "^7.7.0",
    "redux": "^4.1.1",
    "sqlite3": "^5.0.3"
  }
}
